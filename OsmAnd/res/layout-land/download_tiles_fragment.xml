<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:osmand="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:background="@color/color_transparent">

	<LinearLayout
		android:id="@+id/main_view"
		android:layout_width="@dimen/dashboard_land_width"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/action_bar_height"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:background="?attr/actionModeBackground">

			<ImageButton
				android:id="@+id/back_button"
				style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
				android:layout_width="@dimen/action_bar_height"
				android:layout_height="@dimen/action_bar_height"
				android:contentDescription="@string/access_shared_string_navigate_up"
				android:tint="?attr/app_bar_primary_item_color"
				osmand:srcCompat="@drawable/ic_arrow_back" />

			<net.osmand.plus.widgets.TextViewEx
				style="@style/TitleStyle.Medium"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginStart="@dimen/content_padding"
				android:maxLines="1"
				android:ellipsize="end"
				android:text="@string/shared_string_download_map"
				android:textSize="@dimen/bottom_sheet_title_big"
				android:textColor="?attr/app_bar_primary_item_color" />

			<ImageButton
				android:id="@+id/help_button"
				style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
				android:layout_width="@dimen/action_bar_height"
				android:layout_height="@dimen/action_bar_height"
				android:contentDescription="@string/shared_string_help"
				android:tint="?attr/app_bar_primary_item_color"
				osmand:srcCompat="@drawable/ic_action_help_online" />

		</LinearLayout>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:fillViewport="true"
			android:foreground="@drawable/bg_contextmenu_shadow"
			android:foregroundGravity="fill_horizontal|top">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="?attr/list_background_color">

				<LinearLayout
					android:id="@+id/map_source_container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="@dimen/setting_list_item_group_height"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:background="?attr/selectableItemBackground">

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="@dimen/standard_icon_size"
						android:layout_height="@dimen/standard_icon_size"
						android:layout_marginStart="@dimen/content_padding"
						osmand:srcCompat="@drawable/ic_world_globe_dark"
						osmand:tint="?attr/default_icon_color" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/local_size_height"
						android:layout_marginTop="@dimen/content_padding_small"
						android:layout_marginEnd="@dimen/content_padding"
						android:layout_marginBottom="@dimen/content_padding_small"
						android:orientation="vertical">

						<net.osmand.plus.widgets.TextViewEx
							style="@style/TitleStyle"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/map_source"
							android:textColor="?android:textColorPrimary" />

						<net.osmand.plus.widgets.TextViewEx
							style="@style/DescStyle"
							android:id="@+id/selected_map_source"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="?android:textColorSecondary"
							tools:text="Microsoft Earth" />

					</LinearLayout>

				</LinearLayout>

				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="?attr/activity_background_color">

					<include layout="@layout/list_item_divider" />

				</FrameLayout>

				<net.osmand.plus.widgets.TextViewEx
					style="@style/TitleStyle.Medium"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="@dimen/content_padding"
					android:layout_marginVertical="@dimen/content_padding_small"
					android:text="@string/shared_string_zoom_levels"
					android:textColor="?android:textColorPrimary" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="@dimen/content_padding"
					android:orientation="horizontal">

					<include
						android:id="@+id/min_zoom_tile_preview"
						layout="@layout/map_tile_preview"
						android:visibility="gone"
						tools:visibility="visible" />

					<include
						android:id="@+id/max_zoom_tile_preview"
						layout="@layout/map_tile_preview"
						android:layout_width="@dimen/bottom_sheet_big_item_height"
						android:layout_height="@dimen/bottom_sheet_big_item_height"
						android:layout_marginStart="@dimen/content_padding"
						android:visibility="gone"
						tools:visibility="visible" />

				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginStart="@dimen/content_padding"
					android:layout_marginTop="@dimen/content_padding"
					android:background="?attr/divider_color_basic" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/content_padding"
					android:layout_marginTop="@dimen/content_padding_half"
					android:layout_marginEnd="@dimen/content_padding"
					android:orientation="horizontal">

					<net.osmand.plus.widgets.TextViewEx
						style="@style/TitleStyle"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/shared_string_min"
						android:textColor="?android:textColorPrimary" />

					<net.osmand.plus.widgets.TextViewEx
						style="@style/TitleStyle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/shared_string_max"
						android:textColor="?android:textColorPrimary" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/content_padding"
					android:layout_marginTop="@dimen/content_padding_small_half"
					android:layout_marginEnd="@dimen/content_padding"
					android:orientation="horizontal"
					android:gravity="center_vertical">

					<net.osmand.plus.widgets.TextViewEx
						android:id="@+id/min_zoom"
						style="@style/TitleStyle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="@dimen/content_padding_half"
						android:minWidth="@dimen/standard_icon_size"
						android:textColor="?android:textColorSecondary"
						tools:text="8" />

					<com.google.android.material.slider.RangeSlider
						android:id="@+id/zooms_range_slider"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:stepSize="1" />

					<net.osmand.plus.widgets.TextViewEx
						android:id="@+id/max_zoom"
						style="@style/TitleStyle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/content_padding_half"
						android:minWidth="@dimen/standard_icon_size"
						android:gravity="end"
						android:textColor="?android:textColorSecondary"
						tools:text="8" />

				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="?attr/divider_color_basic" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginStart="@dimen/content_padding"
					android:layout_marginTop="@dimen/content_padding_small"
					android:layout_marginEnd="@dimen/content_padding">

					<net.osmand.plus.widgets.TextViewEx
						style="@style/TitleStyle"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:maxLines="1"
						android:ellipsize="end"
						android:text="@string/number_of_tiles"
						android:textColor="?android:textColorPrimary" />

					<net.osmand.plus.widgets.TextViewEx
						android:id="@+id/tiles_number"
						style="@style/TitleStyle.Medium"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/content_padding"
						android:textColor="?android:textColorPrimary"
						tools:text="120 000" />

				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginStart="@dimen/content_padding"
					android:layout_marginTop="@dimen/content_padding_small"
					android:background="?attr/divider_color_basic" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/content_padding"
					android:layout_marginTop="@dimen/content_padding_small"
					android:layout_marginEnd="@dimen/content_padding"
					android:orientation="horizontal">

					<net.osmand.plus.widgets.TextViewEx
						style="@style/TitleStyle"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:maxLines="1"
						android:ellipsize="end"
						android:text="@string/estimated_download_size"
						android:textColor="?android:textColorPrimary" />

					<net.osmand.plus.widgets.TextViewEx
						android:id="@+id/estimated_download_size"
						style="@style/TitleStyle.Medium"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="?android:textColorPrimary"
						tools:text="~ 1 448 MB" />

				</LinearLayout>

				<net.osmand.plus.widgets.TextViewEx
					style="@style/DescStyle"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="@dimen/content_padding"
					android:layout_marginVertical="@dimen/content_padding_small"
					android:text="@string/zoom_levels_difference_description"
					android:textColor="?android:textColorSecondary" />

				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:minHeight="@dimen/card_row_min_height"
					android:background="?attr/activity_background_color">

					<include layout="@layout/card_bottom_divider" />

				</FrameLayout>

			</LinearLayout>

		</ScrollView>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:orientation="vertical"
			android:background="?attr/list_background_color">

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?attr/divider_color" />

			<include
				layout="@layout/bottom_buttons"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dialog_button_ex_height"
				android:layout_gravity="bottom" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/map_window_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/content_padding_half"
				android:background="@color/map_window_outer_color" />

			<View
				android:layout_width="@dimen/content_padding_half"
				android:layout_height="0dp"
				android:layout_marginTop="@dimen/content_padding_half"
				android:layout_alignParentTop="true"
				android:layout_alignBottom="@id/map_window"
				android:background="@color/map_window_outer_color" />

			<View
				android:layout_width="@dimen/content_padding_half"
				android:layout_height="0dp"
				android:layout_marginTop="@dimen/content_padding_half"
				android:layout_alignParentTop="true"
				android:layout_alignParentEnd="true"
				android:layout_alignBottom="@id/map_window"
				android:background="@color/map_window_outer_color" />

			<FrameLayout
				android:id="@+id/map_window"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/content_padding_small_half"
				android:layout_marginTop="@dimen/content_padding_small_half"
				android:layout_marginEnd="@dimen/content_padding_small_half"
				android:background="@drawable/map_window_border" />

		</RelativeLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/map_window_outer_color">

			<net.osmand.plus.widgets.TextViewEx
				style="@style/SmallDescStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="@dimen/content_padding"
				android:layout_marginTop="@dimen/context_menu_buttons_padding_bottom"
				android:layout_marginEnd="@dimen/content_padding"
				android:layout_marginBottom="@dimen/content_padding_small_half"
				android:text="@string/move_map_to_select_area"
				android:textColor="?attr/text_color_tab_active"/>

		</FrameLayout>

	</LinearLayout>

</LinearLayout>