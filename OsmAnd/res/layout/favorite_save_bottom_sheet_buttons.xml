<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/buttons_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom"
	android:gravity="center"
	android:orientation="vertical"
	android:paddingHorizontal="@dimen/content_padding"
	android:paddingVertical="@dimen/content_padding_small">

	<net.osmand.plus.widgets.dialogbutton.DialogButton
		android:id="@+id/third_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		tools:dialogButtonTitle="More information"
		tools:dialogButtonType="secondary"
		tools:visibility="visible" />

	<View
		android:id="@+id/buttons_divider_top"
		android:layout_width="match_parent"
		android:layout_height="@dimen/content_padding"
		android:visibility="gone"
		tools:visibility="visible" />

	<net.osmand.plus.widgets.dialogbutton.DialogButton
		android:id="@+id/right_bottom_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		tools:dialogButtonTitle="Apply"
		tools:dialogButtonType="secondary" />

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/horizontal_divider_height"
		tools:visibility="visible" />

	<net.osmand.plus.widgets.dialogbutton.DialogButton
		android:id="@+id/apply_to_all"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:dialogButtonTitle="Apply"
		tools:dialogButtonType="primary" />

	<View
		android:id="@+id/buttons_divider"
		android:layout_width="match_parent"
		android:layout_height="@dimen/content_padding"
		tools:visibility="visible" />

	<net.osmand.plus.widgets.dialogbutton.DialogButton
		android:id="@+id/dismiss_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		tools:dialogButtonTitle="Cancel"
		tools:dialogButtonType="secondary"
		tools:visibility="visible" />

</LinearLayout>