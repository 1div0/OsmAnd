<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/screen_lock_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bg_service_screen_lock" />

        <CheckBox
            android:id="@+id/sleep_mode_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bg_service_sleep_mode" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <Spinner
            android:id="@+id/wake_up_int_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/wake_up_int_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bg_service_interval" />
        </LinearLayout>


    </LinearLayout>
