<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:osmand="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<include layout="@layout/list_item_divider" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/list_background_color"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/header_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/sync_header_icon"
				android:layout_width="@dimen/standard_icon_size"
				android:layout_height="@dimen/standard_icon_size"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="@dimen/content_padding"
				android:layout_marginRight="@dimen/content_padding"
				android:tint="?attr/default_icon_color"
				osmand:srcCompat="@drawable/ic_action_cloud_upload" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:orientation="vertical"
				android:paddingLeft="@dimen/content_padding"
				android:paddingTop="@dimen/content_padding_small"
				android:paddingRight="@dimen/content_padding"
				android:paddingBottom="@dimen/content_padding_small">

				<net.osmand.plus.widgets.TextViewEx
					android:id="@+id/sync_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:letterSpacing="@dimen/text_button_letter_spacing"
					android:text="@string/last_sync"
					android:textColor="?android:textColorPrimary"
					android:textSize="@dimen/default_list_text_size"
					osmand:lineHeight="@dimen/default_desc_line_height"
					osmand:typeface="@string/font_roboto_medium" />

				<net.osmand.plus.widgets.TextViewEx
					android:id="@+id/last_sync"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:letterSpacing="@dimen/text_button_letter_spacing"
					android:text="@string/shared_string_never"
					android:textColor="?android:textColorSecondary"
					android:textSize="@dimen/default_desc_text_size"
					osmand:lineHeight="@dimen/default_title_line_height"
					osmand:typeface="@string/font_roboto_regular" />

				<net.osmand.plus.widgets.TextViewEx
					android:id="@+id/changes"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:letterSpacing="@dimen/text_button_letter_spacing"
					android:text="@string/no_new_changes"
					android:textColor="?android:textColorSecondary"
					android:textSize="@dimen/default_desc_text_size"
					osmand:lineHeight="@dimen/default_title_line_height"
					osmand:typeface="@string/font_roboto_regular" />

				<me.zhanghai.android.materialprogressbar.MaterialProgressBar
					android:id="@+id/progress_bar"
					style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
					android:layout_width="match_parent"
					android:layout_height="4dp"
					android:layout_marginTop="@dimen/content_padding_small_half"
					android:indeterminate="false"
					osmand:mpb_progressStyle="horizontal"
					osmand:mpb_setBothDrawables="true"
					osmand:mpb_useIntrinsicPadding="false" />

			</LinearLayout>

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/explicit_indicator"
				android:layout_width="@dimen/standard_icon_size"
				android:layout_height="@dimen/standard_icon_size"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/content_padding"
				android:layout_marginRight="@dimen/content_padding"
				android:tint="?attr/default_icon_color" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/local_changes"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			tools:background="?android:attr/selectableItemBackground">

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginStart="@dimen/settings_divider_margin_start"
				android:background="?attr/dashboard_divider"
				android:focusable="false" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<androidx.appcompat.widget.AppCompatImageView
					android:id="@+id/local_changes_icon"
					android:layout_width="@dimen/standard_icon_size"
					android:layout_height="@dimen/standard_icon_size"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/content_padding"
					android:src="@drawable/ic_action_phone_filled" />

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_weight="1"
					android:orientation="vertical"
					android:paddingHorizontal="@dimen/content_padding">

					<net.osmand.plus.widgets.TextViewEx
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ellipsize="marquee"
						android:fadingEdge="horizontal"
						android:letterSpacing="@dimen/text_button_letter_spacing"
						android:maxLines="2"
						android:text="@string/local_changes"
						android:textColor="?android:textColorPrimary"
						android:textSize="@dimen/default_list_text_size"
						osmand:typeface="@string/font_roboto_regular" />

				</LinearLayout>

				<net.osmand.plus.widgets.TextViewEx
					android:id="@+id/local_changes_count"
					style="@style/SmallDescStyle"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:paddingHorizontal="@dimen/content_padding"
					android:textColor="?android:textColorSecondary"
					tools:text="0" />

			</LinearLayout>

		</LinearLayout>


		<LinearLayout
			android:id="@+id/cloud_changes"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?android:attr/selectableItemBackground"
			android:orientation="vertical">

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginStart="@dimen/settings_divider_margin_start"
				android:background="?attr/dashboard_divider"
				android:focusable="false" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<androidx.appcompat.widget.AppCompatImageView
					android:id="@+id/cloud_changes_icon"
					android:layout_width="@dimen/standard_icon_size"
					android:layout_height="@dimen/standard_icon_size"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/content_padding"
					android:src="@drawable/ic_action_cloud" />

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_weight="1"
					android:orientation="vertical"
					android:paddingHorizontal="@dimen/content_padding">

					<net.osmand.plus.widgets.TextViewEx
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ellipsize="marquee"
						android:fadingEdge="horizontal"
						android:letterSpacing="@dimen/text_button_letter_spacing"
						android:maxLines="2"
						android:text="@string/cloud_changes"
						android:textColor="?android:textColorPrimary"
						android:textSize="@dimen/default_list_text_size"
						osmand:typeface="@string/font_roboto_regular" />

				</LinearLayout>

				<net.osmand.plus.widgets.TextViewEx
					android:id="@+id/cloud_changes_count"
					style="@style/SmallDescStyle"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:paddingHorizontal="@dimen/content_padding"
					android:textColor="?android:textColorSecondary"
					tools:text="0" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/conflict_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			tools:background="?android:attr/selectableItemBackground">

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginStart="@dimen/settings_divider_margin_start"
				android:background="?attr/dashboard_divider"
				android:focusable="false" />


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<androidx.appcompat.widget.AppCompatImageView
					android:id="@+id/conflicts_icon"
					android:layout_width="@dimen/standard_icon_size"
					android:layout_height="@dimen/standard_icon_size"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/content_padding"
					android:src="@drawable/ic_action_alert" />

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_weight="1"
					android:orientation="vertical"
					android:paddingHorizontal="@dimen/content_padding">

					<net.osmand.plus.widgets.TextViewEx
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ellipsize="marquee"
						android:fadingEdge="horizontal"
						android:letterSpacing="@dimen/text_button_letter_spacing"
						android:maxLines="2"
						android:text="@string/backup_conflicts"
						android:textColor="?android:textColorPrimary"
						android:textSize="@dimen/default_list_text_size"
						osmand:typeface="@string/font_roboto_regular" />

				</LinearLayout>

				<net.osmand.plus.widgets.TextViewEx
					android:id="@+id/conflicts_count"
					style="@style/SmallDescStyle"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:paddingHorizontal="@dimen/content_padding"
					android:textColor="?android:textColorSecondary"
					tools:text="0" />

			</LinearLayout>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?attr/dashboard_divider"
			android:focusable="false" />

		<LinearLayout
			android:id="@+id/sync_now_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:background="?android:attr/selectableItemBackground">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@android:id/icon"
				android:layout_width="@dimen/standard_icon_size"
				android:layout_height="@dimen/standard_icon_size"
				android:layout_gravity="center_vertical"
				android:layout_margin="@dimen/content_padding"
				android:src="@drawable/ic_action_update"
				android:tint="?colorAccent" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:orientation="vertical"
				android:paddingHorizontal="@dimen/content_padding">

				<net.osmand.plus.widgets.TextViewEx
					android:id="@+id/sync_now_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:ellipsize="marquee"
					android:fadingEdge="horizontal"
					android:letterSpacing="@dimen/text_button_letter_spacing"
					android:maxLines="2"
					android:text="@string/sync_now"
					android:textColor="?colorAccent"
					android:textSize="@dimen/default_list_text_size"
					osmand:typeface="@string/font_roboto_regular" />
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>


</LinearLayout>